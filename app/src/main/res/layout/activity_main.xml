<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:contentDescription="Benz Icon"
            android:src="@drawable/icon_1" />

        <!-- ЛЕТНИЙ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Летний"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputSummer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_input"
            android:hint="Пробег, км"
            android:inputType="numberDecimal"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnSummer"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_button"
            android:text="Рассчитать"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/resultSummer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textColor="#000000" />

        <!-- ЗИМНИЙ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Зимний"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputWinter"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_input"
            android:hint="Пробег, км"
            android:inputType="numberDecimal"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnWinter"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_button"
            android:text="Рассчитать"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/resultWinter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Настройки пропорций, %"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputCityProp"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input"
                android:hint="Город 30%"
                android:inputType="number"
                android:padding="12dp" />

            <EditText
                android:id="@+id/inputRoadProp"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input"
                android:hint="Трасса 70%"
                android:inputType="number"
                android:padding="12dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Нормы расхода, л/100 км"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputCityRate"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input"
                android:hint="Город"
                android:inputType="numberDecimal"
                android:padding="12dp" />

            <EditText
                android:id="@+id/inputRoadRate"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input"
                android:hint="Трасса"
                android:inputType="numberDecimal"
                android:padding="12dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_button"
            android:text="О программе"
            android:textColor="#000000" />

    </LinearLayout>
</ScrollView>
